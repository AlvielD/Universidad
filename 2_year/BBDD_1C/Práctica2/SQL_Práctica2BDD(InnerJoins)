--EI-8.
	SELECT A.nombre as NomAsig, P.nombre as NomProf		//Versión antigua
	FROM EI.ASIGNATURA A, EI.PROFESOR P
	WHERE A.Prof = p.nPr;

	SELECT A.nombre as NomAsig, P.nombre as NomProf		//Versión nueva
	FROM EI.ASIGNATURA A INNER JOIN EI.PROFESOR P ON A.porf = P.nPr;

--EI-9.
	SELECT alum
	FROM EI.MATRICULA M INNER JOIN EI.ASIGNATURA A USING (idAsig)
	WHERE A.nombre = 'Base de Datos I' AND año = 2002;

--EI-10.
	SELECT A.nombre
	FROM (EI.ASIGNATURA ASIG INNER JOIN EI.MATRICULA M USING(idAsig))
		INNER JOIN EI.ALUMNO A ON M.alum = A.nAl
	WHERE ASIG.Nombre = 'Algoritmos y Estructuras de Datos I'
		AND año = 2001 AND feb_jun >= 5;

--EI-11.
	SELECT DISTINCT DESPACHO
	FROM EI.PROFESOR P1 INNER JOIN EI.PROFESOR P2 USING (DESPACHO)
	WHERE P1.NOMBRE <> P2.NOMBRE;

--EI-12.
	(SELECT A.nombre
	FROM EI.ASIGNATURA A INNER JOIN EI.PROFESOR P ON P.nPr = A.prof
	WHERE P.nombre = 'Dolores Toscano Barriga')
UNION
	(SELECT A.nombre
	FROM (EI.ASIGNATURA A INNER JOIN EI.MATRICULA M USING (idAsig))
		INNER JOIN EI.PROFESOR P ON M.porf = P.nPr
	WHERE P.nombre = 'Dolores Toscano Barriga');

--EI-13.
SELECT A.nombre
FROM (EI.ALUMNO A INNER JOIN EI.MATRICULA M ON A.nAl = M.alum)
	INNER JOID EI.ASIGNATURA ASIG USING (idAsig)
WHERE ASIG.nombre = 'Base de Datos I' AND 
	año = 2002 AND dic is NULL AND
	(feb_jun >= 5 OR sep >= 5);

---------------------------------------------------------------------------------------------------
							--PRÁCTICA 2 INNER JOINS--
---------------------------------------------------------------------------------------------------

--WRC-1
	SELECT T.NUMEROTRAMO
	FROM WRC.TRAMO T NATURAL JOIN WRC.RALLY R
	WHERE R.NOMBRE = 'Rally de Montecarlo' AND T.DIFICULTAD = 'B';

--WRC-2
	SELECT P.NOMBREP,C.MARCA, C.MODELO
	FROM WRC.PILOTO P INNER JOIN WRC.COCHE C ON P.COCHE = C.CODCOCHE
	WHERE C.CILINDRADA >= 2500 AND P.RH = '-';

--WRC-3
	SELECT P.NOMBRECOP
	FROM (WRC.PILOTO P INNER JOIN WRC.PARTICIPA A USING (CODPILOTO))
      		INNER JOIN WRC.RALLY R USING (CODRALLY)
	WHERE A.PENALIZACION > 10 AND R.NOMBRE = 'Rally de Cataluña';

--WRC-4
	SELECT P.NOMBREP, R.NOMBRE, R.FECHA
	FROM (WRC.PILOTO P INNER JOIN WRC.PARTICIPA A USING (CODPILOTO))
      		INNER JOIN WRC.RALLY R USING (CODRALLY)
	WHERE A.PENALIZACION < 20 AND
		((EXTRACT (MONTH FROM R.FECHA) = 8) OR (EXTRACT (MONTH FROM R.FECHA)=11));

--WRC-5
	SELECT DISTINCT R.NOMBRE, R.FECHA
	FROM (((WRC.RALLY R INNER JOIN WRC.PARTICIPA A USING (CODRALLY))
      		INNER JOIN WRC.PILOTO P USING (CODPILOTO)) 
      		INNER JOIN WRC.COCHE C ON P.COCHE = C.CODCOCHE)
	WHERE C.MARCA='Citroen';